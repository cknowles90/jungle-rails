<article class="line-item">
  <%= image_tag line_item.product.image.thumb.url, class: 'line-item-image' %>
  <div class="line-item-details">
    <h4><%= line_item.product.name %></h4>
    <p class="line-item-description"><%= line_item.product.description %></p>
  </div>
  <div class="line-item-quantity">
    <p><strong>Quantity:</strong> <%= line_item.quantity %></p>
  </div>
  <div class="line-item-total">
    <p><strong>Total:</strong> <%= humanized_money_with_symbol line_item.total %></p>
  </div>
</article>